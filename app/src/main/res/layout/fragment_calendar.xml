<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calendarFragmentRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- CalendarView Kizitonwose -->
    <com.kizitonwose.calendar.view.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cv_dayViewResource="@layout/item_calendar_day"/>

    <!-- Titre liste événements du jour -->
    <TextView
        android:id="@+id/tvDayEventsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Événements du jour"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Liste des événements pour le jour sélectionné -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDayEvents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</LinearLayout>