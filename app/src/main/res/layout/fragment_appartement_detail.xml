<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollDetailAppartement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/system_background_dark"
    tools:context=".details.AppartementDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Carte Appartement -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAppartement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:clickable="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNomAppartement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom Appartement"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAdresseAppartement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresse complète"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvProprietaire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Propriétaire"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Carte Location Active -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLocationActive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLocataire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Locataire"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDatesLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Du xx/xx/xxxx au xx/xx/xxxx"
                    android:layout_marginTop="2dp" />

                 />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Liste chronologique des locations -->
        <TextView
            android:id="@+id/tvTitleHistorique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historique des locations"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerLocations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_location" />

    </LinearLayout>
</ScrollView>